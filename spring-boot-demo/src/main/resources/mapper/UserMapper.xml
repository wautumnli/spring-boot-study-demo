<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ql.demo.mybatis.dao.UserMapper">

    <resultMap id="BaseResult" type="com.ql.demo.mybatis.domain.User" />
    
    <sql id="BaseField">
        id, name, address, deleted
    </sql>
    
    <select id="queryAll" resultMap="BaseResult">
        SELECT
        <include refid="BaseField" />
        FROM t_user
    </select>

    <!-- 分页查询优化 内连接优化法-->
    <select id="queryPage" resultMap="BaseResult">
        SELECT
        <include refid="BaseField" />
        FROM t_user
        INNER JOIN (SELECT id FROM t_user limit #{pageNo}, #{pageSize}) b using(id)
    </select>

</mapper>